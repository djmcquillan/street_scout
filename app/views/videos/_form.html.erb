<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@video) do |f| %>
      <%= f.text_field :title, placeholder:'Title', class: 'form-control'%><br>
      <%= f.text_field :description, placeholder: 'Description', class: 'form-control'%><br>
      <%= f.label :video %>
      <%= f.file_field :video %><br>
      <%= f.label :remote_video_url, "Paste Video URL here!"%>
      <%= f.text_field :remote_video_url %><br>
      <%= f.submit "Upload Video", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>