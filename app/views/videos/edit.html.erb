<h1>Edit Video</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@video) do |f| %>
      <%= f.text_field :title, placeholder:'Title', class: 'form-control'%><br>
      <%= f.text_field :description, placeholder: 'Description', class: 'form-control'%><br>
      <%= f.label :url, "Paste Video URL here!"%>
      <%= f.text_field :url %><br>
      <%= f.submit "Save Video Changes", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

<%= link_to 'Back', users_path %>

